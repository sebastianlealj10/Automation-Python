import time
import unittest

from selenium import webdriver
from Pages import Login
from Pages import AddCustomer


class AddingCustomersTestCase(unittest.TestCase):

    def setUp(self):
        # create a new Firefox session
        self.driver = webdriver.Firefox()
        self.driver.implicitly_wait(30)
        self.driver.maximize_window()
        # navigate to the application home page
        self.driver.get("http://www.way2automation.com/angularjs-protractor/banking/#/login")
        login_page = Login.Login(self.driver)
        login_page.bank_manager_login()

    def test_add_customer(self):
        home_page = AddCustomer.ManagerPage(self.driver)
        home_page.add_customer()
        home_page.add_username()
        home_page.add_last_name()
        home_page.add_post_code()
        home_page.submit()
        home_page.customer_added_alert()
        time.sleep(10)

    def test_open_account(self):
        home_page = AddCustomer.ManagerPage(self.driver)
        home_page.add_customer()
        home_page.add_username()
        home_page.add_last_name()
        home_page.add_post_code()
        home_page.submit()
        home_page.customer_added_alert()
        time.sleep(2)
        home_page.open_account()
        home_page.select_user()
        home_page.select_currency()
        home_page.submit_button()
        home_page.customer_added_alert()
        time.sleep(10)

    def tearDown(self):
        # close the browser window
        self.driver.quit()


'''
if __name__ == '__main__':
    unittest.main()
'''


def suite():
    suite = unittest.TestSuite()
    suite.addTest(AddingCustomersTestCase('test_open_account'))
    return suite


if __name__ == '__main__':
    runner = unittest.TextTestRunner()
    runner.run(suite())
